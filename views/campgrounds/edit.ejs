<% layout("layout/boilerplate")%>
<div class="row">
    <h1 class="text-center">Edit Campground</h1>
    <div class="col-md-6 offset-md-3">
        <form action="/campgrounds/<%= camp.id %>?_method=PUT" novalidate class="needs-validation" method="POST" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" value="<%=camp.title%>" name="campground[title]" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" id="location" value="<%= camp.location%>" name="campground[location]" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="price">Price</label>
                <div class="input-group mb-3">
                    <span class="input-group-text" id="basic-addon1">$</span>
                    <input type="text" class="form-control" id="price" name="campground[price]" value="<%=camp.price%>" placeholder="0.00"
                        aria-label="0.00" aria-describedby="basic-addon1" required>
                </div>
            </div>
            <div class="mb-3">
                <label for="image" class="form-label">Add image(s)</label>
                <input class="form-control" type="file" id="image" multiple name="image">
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" required id="description" name="campground[description]"><%=camp.description%></textarea>
            </div>

            <div class="mb-3">
                <% camp.images.forEach((img,i)=>{ %> 
                    <img src="<%= img.thumbnail %> " class="img-thumbnail" alt="">
                    <div class="form-check-inline">
                        <input type="checkbox" name="deleteImages[]" value="<%=img.filename%>" id="image">
                    </div>
                    <label for="image-<%= i %> ">Delete</label>
                <% }) %> 
            </div>

            <div class="mb-3">
                <button class="btn btn-success">Edit Campground</button>
            </div>
        </form>
    </div>
</div>
